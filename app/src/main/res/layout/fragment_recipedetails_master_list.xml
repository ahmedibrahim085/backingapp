<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginEnd="@dimen/margin4"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="This is a Recipe Ingredient" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_recipe_details_steps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:context=".ui.recipeDetails.RecipeDetailsActivity"
        tools:itemCount="3" />

</LinearLayout>

